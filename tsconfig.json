{
  "compilerOptions": {
    "target": "es2021",
    "lib": ["es2021", "DOM", "DOM.Iterable"], // 包含 DOM 是为了 HTML 类型支持
    "module": "es2022",
    "moduleResolution": "bundler",
    "types": ["@cloudflare/workers-types", "hono"],
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "noEmit": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "worker-configuration.d.ts"]
}
